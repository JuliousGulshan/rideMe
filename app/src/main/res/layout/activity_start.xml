<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/strt_scr"
    android:orientation="vertical"
    tools:context="com.example.juliousgill.rideme.StartActivity">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/listButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitStart"
        android:src="@drawable/logo_bike" />


    <Button
        android:id="@+id/listButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_orange_light"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="displayListView"
        android:text="List view" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listButton"
        android:layout_alignStart="@+id/listButton"
        android:layout_below="@+id/listButton"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_light"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:onClick="displayMapView"
        android:text="map view" />

    <Button
        android:id="@+id/aboutButton"
        android:onClick="displayAboutView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mapButton"
        android:layout_alignStart="@+id/mapButton"
        android:layout_below="@+id/mapButton"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_light"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="about" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed By:Julious Gulshan"
        android:textStyle="italic"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        />

</LinearLayout>
